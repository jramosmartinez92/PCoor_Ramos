@model PCoor_Ramos.Web.Models.ConsumidorViewModel

@{
    ViewData["Title"] = "Nuevo Consumidor";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white text-center">
                <h4>Registrar Consumidor</h4>
            </div>
            <div class="card-body">
                <form asp-action="Crear" method="post">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label"></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Dui" class="form-label"></label>
                        <input asp-for="Dui" class="form-control" placeholder="Ej: 12345678-9" />
                        <span asp-validation-for="Dui" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <a asp-controller="Reclamo" asp-action="Crear">Volver al formulario de reclamo</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

